doctype html 
html 
    head 
        title= title 
        link(rel='stylesheet',href='/style.css')
        style. 
        
            input{
                background-color : #5E35B1;
                color : #fff;
                box-shadow : none;
                height : 30px;
            }
            .top{
                display :flex;
                justify-content : space-between;
            }
            .sns{
                display :flex;
            }
            .twitter, 
            .facebook, 
            .insta,
            .youtube{
                width : 23px;
                height : 23px;
                background-color : #5E35B1;
                border-radius : 60%;
                margin-right : 5px;
            }
            .main{
                border-top : 1px solid #999;
            }
            .img{
                margin-top : 70px;
            }
            footer{
                width : 100%;
                height : 100px;
                background-color:#333;
            }
            ul{
                list-style : none;
                display : flex;
            }
            li{
                margin-right : 20px;
                font-size : 15px;
                color : #999;
                font-weight : 700;
            }
            .first{
                color : #333;

            }

    body 
        include header 
        block content 
        include footer